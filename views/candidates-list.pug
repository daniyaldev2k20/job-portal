extends base

block content
  main.main
    .card-container

      each candidate in candidates
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/candidate.png`, alt=`candidate`)
            h3.heading-tertirary
              span= candidate.name

          .card__footer
            a.btn.btn--green.btn--small(href=`/getCandidate/${candidate.token}`) Update Candidate 
            a.btn.btn--red.btn--small(href=`/deleteCandidate/${candidate.token}`) Delete Candidate  